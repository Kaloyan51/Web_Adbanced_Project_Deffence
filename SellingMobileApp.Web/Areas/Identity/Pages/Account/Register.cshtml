@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <h1 class="text-center fw-bold mb-4" style="color: black;">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <section class="p-4 shadow-lg rounded bg-white">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2 class="text-center text-secondary mb-4">Create a new account</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

                    <!-- Email Field -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.UserEmail" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.UserEmail">User Email</label>
                        <span asp-validation-for="Input.UserEmail" class="text-danger"></span>
                    </div>

                    <!-- Password Field -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- Confirm Password Field -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- User Name Field -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="UserName" />
                        <label asp-for="Input.Name">User Name</label>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>

                    <!-- Phone Number Field -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.UserPhoneNumber" class="form-control" aria-required="true" placeholder="Phone Number" />
                        <label asp-for="Input.UserPhoneNumber">Phone Number</label>
                        <span asp-validation-for="Input.UserPhoneNumber" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg w-100 fw-bold rounded-pill">Register</button>
                </form>
            </section>
        </div>
    </div>

