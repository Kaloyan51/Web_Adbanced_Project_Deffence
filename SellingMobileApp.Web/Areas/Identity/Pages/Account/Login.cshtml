@page
@model LoginModel

@{
    ViewData["Title"] = "LogIn";
}

<div class="container mt-5">
    <h1 class="text-center fw-bold mb-4" style="color: black;">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <section class="p-4 shadow-lg rounded bg-white">
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

                    <!-- Username Field -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Name" class="form-control" autocomplete="email" aria-required="true" placeholder="mail" />
                        <label asp-for="Input.Name" class="form-label">Username</label>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>

                    <!-- Password Field -->
                    <div class="form-floating mb-4">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div>
                        <button id="login-submit" type="submit" class="btn btn-primary btn-lg w-100 fw-bold rounded-pill">Log in</button>
                    </div>

                    <!-- Additional Options (Commented Out) -->
                    <!--<div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>-->
                </form>
            </section>
        </div>
    </div>
</div>

