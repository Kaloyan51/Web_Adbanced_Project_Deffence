@model IEnumerable<SellingMobileApp.Data.Models.ViewModels.AllListingsViewModel>

@{
    ViewData["Title"] = "Всички обяви";
}

<h2>Всички обяви</h2>

<div class="row">
    @foreach (var listing in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4" style="width: 18rem;">
                @if (!string.IsNullOrEmpty(listing.ImageUrl))
                {
                    <img src="@listing.ImageUrl" class="card-img-top" alt="Обява за @listing.Title">
                }
                else
                {
                    <img src="https://via.placeholder.com/150" class="card-img-top" alt="Обява за @listing.Title">
                }
                <div class="card-body">
                    <h5 class="card-title">@listing.Title</h5>
                    <p class="card-text">
                        <strong>Цена:</strong> @listing.Price €<br />
                        <strong>Година на производство:</strong> @listing.ManufactureYear
                    </p>
                    <div class="d-flex justify-content-between">
                        <!-- Бутон за добавяне в любими -->
                        <button class="btn btn-outline-primary" disabled>Добави в любими</button>
                        <!-- Бутон за редактиране -->
                        <button class="btn btn-outline-warning" disabled>Редактиране</button>
                        <!-- Бутон за детайли -->
                        <button class="btn btn-outline-info" disabled>Детайли</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
