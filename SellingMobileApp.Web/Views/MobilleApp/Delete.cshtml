@model SellingMobileApp.Data.Models.ViewModels.DeleteListingViewModel

@{
    ViewData["Title"] = "Потвърждение за изтриване";
}

<div class="container mt-5">
    <h2 class="text-center text-danger">@ViewData["Title"]</h2>
    <hr />
    <p class="text-center fs-5">Сигурни ли сте, че искате да изтриете тази обява?</p>

    <div class="card mx-auto" style="max-width: 500px;">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
        </div>
    </div>

    <div class="text-center mt-4">
        <form asp-action="Delete" asp-controller="MobilleApp" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger btn-lg me-2">Изтриване</button>
            <a asp-action="All" asp-controller="MobilleApp" class="btn btn-secondary btn-lg">Отказ</a>
        </form>
    </div>
</div>
